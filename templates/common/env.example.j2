# Application Settings
APP_NAME={{ name | title_case }}
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Database Configuration
{% if database == 'PostgreSQL' -%}
DATABASE_URL=postgresql://root:password@localhost:5432/db_name
{% elif database == 'MySQL' -%}
DATABASE_URL=mysql://root:password@localhost:3306/{{ name | snake_case }}
{% elif database == 'SQLite' -%}
{% if orm == 'TortoiseORM' -%}
DATABASE_URL=sqlite://db.sqlite3
{% else -%}
DATABASE_URL=sqlite+aiosqlite:///./{{ name | snake_case }}.db
{% endif -%}
{% endif -%}

{% if auth_enabled -%}
# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-secure-random-string-min-32-characters-please
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES=30

{% endif -%}
# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# API Configuration
API_PREFIX=/api
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json