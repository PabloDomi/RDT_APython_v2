[pytest]
testpaths = tests
python_files = test_*.py
python_classes = Test*
python_functions = test_*
addopts = 
    -v
    --strict-markers
    --tb=short
    --cov=src
    --cov-report=html
    --cov-report=term-missing
    {% if is_async -%}
    --asyncio-mode=auto
    {% endif -%}

markers =
    slow: marks tests as slow
    integration: marks tests as integration tests
    unit: marks tests as unit tests