# Pylint configuration for Vyte

[MASTER]
ignore=CVS,.git,__pycache__,.pytest_cache
ignore-patterns=test_.*?py,conftest.py
jobs=1
persistent=yes
suggestion-mode=yes
unsafe-load-any-extension=no

[MESSAGES CONTROL]
disable=
    C0103,  # Invalid name
    C0114,  # Missing module docstring
    C0115,  # Missing class docstring
    C0116,  # Missing function docstring
    R0903,  # Too few public methods
    R0913,  # Too many arguments
    W0212,  # Access to protected member
    W0511,  # TODO/FIXME comments
    C0330,  # Wrong hanging indentation (conflicts with Black)
    C0326,  # Bad whitespace (conflicts with Black)

[REPORTS]
output-format=colorized
reports=no
score=yes

[REFACTORING]
max-nested-blocks=5

[BASIC]
good-names=i,j,k,ex,_,id,db,pk,e

[FORMAT]
max-line-length=100
indent-string='    '
expected-line-ending-format=LF

[LOGGING]
logging-format-style=new

[MISCELLANEOUS]
notes=FIXME,XXX,TODO

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[SPELLING]
spelling-store-unknown-words=no

[TYPECHECK]
ignored-classes=SQLObject,optparse.Values,thread._local,_thread._local

[VARIABLES]
dummy-variables-rgx=_+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_

[CLASSES]
defining-attr-methods=__init__,__new__,setUp

[DESIGN]
max-args=8
max-attributes=10
max-bool-expr=5
max-branches=15
max-locals=20
max-parents=7
max-public-methods=25
max-returns=6
max-statements=50
min-public-methods=1

[IMPORTS]
allow-wildcard-with-all=no
deprecated-modules=optparse,imp
